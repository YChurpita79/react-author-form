.greeting-section
  display flex
  justify-content center
  align-items center
  position relative
  width 100%
  height 100vh

.greeting
  display flex
  flex-wrap wrap
  position relative
  justify-content space-between
  align-items center
  padding 25px
  box-shadow 0 0 8px gray

  .greeting-user-wrap
    display block
    position relative
    padding-left 10px
    border-left solid 1px darkgray
  a
    font-size 18px
    display block
    position relative;
    width 100%
    text-align right
    cursor pointer
    > i
        font-size 20px

  h3
    font-size 18px
    display block
    position relative
    width 100%
    text-align left
    margin-top 5px
  h2
    font-size 24px
    display block
    position relative
    width 100%
    text-align center
    font-weight bold
  >i
    font-size 150px
    color cornflowerblue
    padding-right 10px


